<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightwhite"
    tools:context="com.example.mad_Signup_Page.CalculateGuideExpense">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Guides Expense"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/blackcolor"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/lightwhite">



            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guide ID"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/blackcolor"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guide Name"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/blackcolor"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/blackcolor"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount of Salary Given"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/blackcolor"
                    android:layout_weight="1"
                    android:gravity="center"/>


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tharaka"
                    android:textColor="@color/greycolor"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/12/2020"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="2dp"/>


            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sanjaya"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/10/2020"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45,000"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"/>


            </TableRow>



            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Induwara"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/08/2020"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40,000"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/greycolor"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"/>


            </TableRow>





        </TableLayout>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:id="@+id/calculateExpense"
            android:text="Calculate Expense"
            android:textColor="@color/Whitecolor"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:background="@drawable/calculateexpense_btn"/>





    </LinearLayout>

</LinearLayout>
